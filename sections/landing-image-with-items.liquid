<div class="landing-image-with-items">
  <div class="Container image-and-items-wrap">
    <div class="image-content">
      <img src="{{ section.settings.image | img_url: '1024x' }}" alt="{{ section.settings.image.alt }}"/>
    </div>
    <div class="text-content">
      {% for block in section.blocks %}
        <div class="text-item">{{ block.settings.text }}</div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
  #shopify-section-{{ section.id }} .text-item {
    margin-bottom: {{ section.settings.range }}px;
  }
</style>

{% schema %}
{
  "name": "Landing-Image with Items",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "range",
      "id": "range",
      "label": "Bullet Spacing",
      "min": 10,
      "max": 100,
      "default": 30,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "text_item",
      "name": "Text Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ]
}
{% endschema %}