<div class="Container">
  {% if section.settings.heading != blank %}
    <div class="Section__header">
      <h2 class="heading">{{section.settings.heading}}</h2>
    </div>
  {% endif %}

  {% if section.settings.foursixty_snippet != blank %}
    <div class="Section__content">
      {{section.settings.foursixty_snippet}}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "FourSixty App",
  "class": "Section Section--ig-feed",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "html",
      "id": "foursixty_snippet",
      "label": "FourSixty Snippet"
    }
  ],
  "presets": [
    {
      "name": "FourSixty App",
      "category": "Instagram Feed"
    }
  ]
}
{% endschema %}
