<div class="Container">
  <div class="image-gallery">
    {% for block in section.blocks %}
      <div class="image-slide image-{{ section.settings.image_size }} {% unless section.settings.image_size == 'variable' %}image-size-fit{% endunless %}">
        <img src="{{ block.settings.photo | img_url: '1024x' }}" alt="{{ block.settings.photo.alt }}">
      </div>
    {% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Landing Image Slider",
  "settings": [
    {
      "type": "select",
      "options": [
        {
          "value": "large",
          "label": "Large"
        },
        {
          "value": "medium",
          "label": "Medium"
        },
        {
          "value": "small",
          "label": "Small"
        },
        {
          "value": "variable",
          "label": "Variable"
        }
      ],
      "id": "image_size",
      "label": "Image Size",
      "default": "variable"
    }
    
  ],
  "blocks": [
    {
      "type": "photo",
      "name": "Photo",
      "settings":[
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Photo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Landing Image Slider",
      "category": "landing"
    }
  ]
}
{% endschema %}