{% assign number_of_comments = article.comments_count %}
{% if comment and comment.created_at %}
  {% assign number_of_comments = article.comments_count %}
{% endif %}

  <div class="Main">
    <div class="Main__content Container Container--narrow Article">

      <div class="Article__header">

          {% if article.image %}
            <figure class="main-image">
              <img
                data-sizes="auto"
                src="{{ article.image.src | img_url: '400x' }}"
                data-srcset="
                    {{ article.image.src | img_url: '400x' }} 400w,
                    {{ article.image.src | img_url: '800x' }} 800w,
                    {{ article.image.src | img_url: '1200x' }} 1200w,
                    {{ article.image.src | img_url: '1600x' }} 1600w"
                class="lazyload fadeup"
                alt="{{ product.title }}" />
                <figcaption><h1>{{article.title}}</h1></figcaption>
            </figure>
          {% else %}
            <h1>{{article.title}}</h1>
          {% endif %}
        <div class="Article__sequentialNav {% if article.image == blank %}no-cover-image{% endif %}">
          
            <a href="{{ blog.next_article }}" class="btn next" aria-label="Next Article" {% unless blog.next_article %}style="visibility: hidden;"{% endunless %}>
              <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
                <use xlink:href='#icon-right'></use>
              </svg>
            </a>
          
          
            <a href="{{ blog.previous_article }}" class="btn prev" aria-label="Previous Article" {% unless blog.previous_article %}style="visibility: hidden;"{% endunless %}>
              <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
                <use xlink:href='#icon-left'></use>
              </svg>
            </a>
        </div>

      </div>
      <div class="Article__details">

        <p class="meta">{{ article.created_at | date: "%B %d, %Y" }}</p>
        <div class="Article__body">{{ article.content }}</div>
        {% include 'article-comments' %}

      </div>
    </div>
  </div>
