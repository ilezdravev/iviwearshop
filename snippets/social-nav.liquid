<div class="Nav Nav--social">
  {% if settings.social-facebook-check %}
    <div class="Nav__item level-1">
      <a href="{{ settings.social-facebook }}" target="_blank" class="Nav__link level-1" aria-label="Facebook">
        <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
          <use xlink:href='#facebook'></use>
        </svg>
      </a>
    </div>
  {% endif %}

  {% if settings.social-twitter-check %}
    <div class="Nav__item level-1">
      <a href="{{ settings.social-twitter }}" target="_blank" class="Nav__link level-1" aria-label="Twitter">
        <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
          <use xlink:href='#twitter'></use>
        </svg>
      </a>
    </div>
  {% endif %}

  {% if settings.social-youtube-check %}
    <div class="Nav__item level-1">
      <a href="{{ settings.social-youtube }}" target="_blank" class="Nav__link level-1" aria-label="YouTube">
        <svg class="youtube-svg" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/></svg>
      </a>
    </div>
  {% endif %}

  {% if settings.social-instagram-check %}
    <div class="Nav__item level-1">
      <a href="{{ settings.social-instagram }}" target="_blank" class="Nav__link level-1" aria-label="Instagram">
        <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
          <use xlink:href='#instagram'></use>
        </svg>
      </a>
    </div>
  {% endif %}

  {% if settings.social-pinterest-check %}
    <div class="Nav__item level-1">
      <a href="{{ settings.social-pinterest }}" target="_blank" class="Nav__link level-1" aria-label="Pinterest">
        <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
          <use xlink:href='#pinterest'></use>
        </svg>
      </a>
    </div>
  {% endif %}

   {% if settings.social-tiktok-check %}
    <div class="Nav__item level-1">
      <a href="{{ settings.social-tiktok }}" target="_blank" class="Nav__link level-1" aria-label="TikTok">
        <svg viewBox='0 0 20 20' class='icon' width='1em' height='1em'>
          <use xlink:href='#tiktok'></use>
        </svg>
      </a>
    </div>
  {% endif %}
</div>