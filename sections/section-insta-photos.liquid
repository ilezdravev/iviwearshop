{% assign object = section.settings %}
{% assign heading = object.heading %}
{% assign linking_options = object.linking_options %}
{% assign global_link = object.global_link %}

{% if section.blocks.size > 0 %}
  <div class="Section Section--press Section--social-photos">
    <div class="Container">
    {% if heading != blank %}
      <div class="Section__header">
        <h2 class="heading">{{ heading }}</h2>
      </div>
    {% endif %}
      <div class="Section__content">
       {% if global_link != blank and linking_options == "global" %}
          <a href="{{ global_link }}">
        {% endif %}
         <div class="Loop" data-layout="dense">
            {% for block in section.blocks %}
            {% assign image = block.settings.photo %}
            {% assign link = block.settings.link %}
            {% assign open_new_tab = block.settings.open_new_tab %}
              <a href="/pages/showroom-landing">
                <figure class="item">
                  <img data-src="{{image.src | img_url: '300x'}}" class="lazyload" alt="{{image.alt}}">
                </figure>
              </a>
            {% endfor %}
          </div>
        {% if global_link != blank and linking_options == "global" %}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Social Photos",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ivy City Co Showroom"
    }
  ],
  "blocks": [
    {
      "type": "photo",
      "name": "Photo",
      "settings":[
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Photo"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social Photos",
      "category": "Info"
    }
  ]
}
{% endschema %}
