<div class="Container">
  <div class="title">{{ section.settings.title }}</div>
</div>


<div class="Container">
  <div class="image-gallery">
    {% for block in section.blocks %}
      <div class="image-slide">
        <img src="{{ block.settings.photo | img_url: '1024x' }}" alt="{{ block.settings.photo.alt }}">
      </div>
    {% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Ambassador 2",
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "type": "photo",
      "name": "Photo",
      "settings":[
        {
          "type": "image_picker",
          "id": "photo",
          "label": "Photo"
        }
      ]
    }
  ]
}
{% endschema %}